# Network Engineers Toolkit - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=nettools
DB_USER=nettools_user
DB_PASSWORD=your_secure_database_password_here

# ============================================
# Security & Authentication
# ============================================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Encryption Key (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_32_byte_encryption_key_here_must_be_32_chars

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@nettools.local

# ============================================
# External API Keys (Optional)
# ============================================
# WhoisXML API - Get from https://whoisxmlapi.com/
WHOISXML_API_KEY=your_whoisxml_api_key_here

# PeeringDB API - Get from https://peeringdb.com/
PEERINGDB_API_KEY=your_peeringdb_api_key_here

# IP Geolocation API - Get from https://ipgeolocation.io/
IPGEOLOCATION_API_KEY=your_ipgeolocation_api_key_here

# VirusTotal API - Get from https://www.virustotal.com/
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# ============================================
# SSL/TLS Configuration (for production)
# ============================================
# Domain name for Let's Encrypt
DOMAIN_NAME=your-domain.com

# Email for Let's Encrypt notifications
LETSENCRYPT_EMAIL=admin@your-domain.com

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS Settings
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# ============================================
# Feature Flags
# ============================================
ENABLE_REGISTRATION=true
ENABLE_API_DOCS=true

# ============================================
# Admin Settings (DEPRECATED - DO NOT USE IN PRODUCTION)
# ============================================
# These settings are deprecated for security reasons
# Use the setup:admin script instead to create admin users
# DEFAULT_ADMIN_USERNAME=admin
# DEFAULT_ADMIN_PASSWORD=admin123
# DEFAULT_ADMIN_EMAIL=admin@localhost
